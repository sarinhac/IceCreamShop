@model IceCreamSystem.Models.Office

@{
    Layout = "~/Views/Shared/_ModalView.cshtml";
    ViewBag.Title = "Delete";
    ViewBag.Btn = "danger";
}

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Company.NameCompany)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Company.NameCompany)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.NameOffice)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.NameOffice)
    </dd>

    @if (Model.DescriptionOffice != null)
    {
        <dt>
            @Html.DisplayNameFor(model => model.DescriptionOffice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescriptionOffice)
        </dd>
    }

    <dt>
        @Html.DisplayNameFor(model => model.Status)
    </dt>

    @if (Model.Status != 0)
    {
        <dd class="badge badge-success">
            @Html.DisplayFor(model => model.Status)
        </dd>
    }
    else
    {
        <dd class="badge badge-danger">
            @Html.DisplayFor(model => model.Status)
        </dd>
    }

    <dt>
        @Html.DisplayNameFor(model => model.Created)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Created)
    </dd>

</dl>