@model IceCreamSystem.Models.Category

@{
    Layout = "~/Views/Shared/_ModalView.cshtml";
    ViewBag.Title = "Details";
    ViewBag.Controller = "Categories";
    ViewBag.Id = Model.IdCategory;
}

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Company.NameCompany)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Company.NameCompany)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.NameCategory)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.NameCategory)
    </dd>

    @if (Model.DescriptionCategory != null)
    {
        <dt>
            @Html.DisplayNameFor(model => model.DescriptionCategory)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescriptionCategory)
        </dd>
    }

    <dt>
        @Html.DisplayNameFor(model => model.Status)
    </dt>

    @if (Model.Status != 0)
    {
        <dd class="badge badge-success">
            @Html.DisplayFor(model => model.Status)
        </dd>
    }
    else
    {
        <dd class="badge badge-success">
            @Html.DisplayFor(model => model.Status)
        </dd>
    }

    <dt>
        @Html.DisplayNameFor(model => model.Created)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Created)
    </dd>

</dl>

