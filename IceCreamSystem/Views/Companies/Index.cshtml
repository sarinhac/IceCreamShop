@model IEnumerable<IceCreamSystem.Models.Company>

@{
    Layout = "~/Views/Shared/_IndexsView.cshtml";
    ViewBag.Title = "Companies";
}

<table id="example1" class="table table-bordered table-striped dataTable dtr-inline collapsed" style="width:100%" role="grid" aria-describedby="example1_info">
    <thead>
        <tr role="row">
            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
                @Html.DisplayNameFor(model => model.NameCompany)
            </th>
            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
                @Html.DisplayNameFor(model => model.FlAuthoritativeReceipt)
            </th>
            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr role="row">
                <td class="sorting_1" tabindex="0">
                    @Html.DisplayFor(modelItem => item.NameCompany)
                </td>
                <td>
                    @if (item.FlAuthoritativeReceipt == true)
                    {
                        <div class="badge badge-success">Yes</div>
                    }
                    else
                    {
                        <div class="badge badge-danger">No</div>
                    }
                </td>
                <td>
                    @if (item.Status != 0)
                    {
                        <div class="badge badge-success">@Html.DisplayFor(modelItem => item.Status)</div>
                    }
                    else
                    {
                        <div class="badge badge-danger">@Html.DisplayFor(modelItem => item.Status)</div>
                    }
                </td>
                <td>
                    <div class="btn-group pull-center d-lg-inline">
                        <a class="btn btn-block bg-gradient-info d-lg-inline details" data-toggle="modal" data-target="#modal" data-url="@Url.Action("Details", "Companies", new { id = item.IdCompany })"> <i class="fas fa-info-circle"></i> Details </a>
                        @if ((int)@Session["permission"] != 1)
                        {
                            <a class="btn btn-block bg-gradient-warning d-lg-inline disabled" href="@Url.Action("Edit", "Companies", new { id = item.IdCompany })"> <i class="fas fa-edit"></i> Edit </a>

                            if (item.Status != 0)
                            {
                                <a class="btn btn-block bg-gradient-danger d-lg-inline disabled delete" data-toggle="modal" data-target="#modal" data-url="@Url.Action("Delete", "Companies", new { id = item.IdCompany })"> <i class="fas fa-trash-alt"></i> Delete </a>
                            }
                            else
                            {
                                <a class="btn btn-block bg-gradient-success d-lg-inline disabled active" data-toggle="modal" data-target="#modal" data-url="@Url.Action("Active", "Companies", new { id = item.IdCompany })"> <i class="fas fa-history"></i> Active </a>
                            }
                        }
                        else
                        {
                            <a class="btn btn-block bg-gradient-warning d-lg-inline" href="@Url.Action("Edit", "Companies", new { id = item.IdCompany })"> <i class="fas fa-edit"></i> Edit </a>

                            if (item.Status != 0)
                            {
                                <a class="btn btn-block bg-gradient-danger d-lg-inline delete" data-toggle="modal" data-target="#modal" data-url="@Url.Action("Delete", "Companies", new { id = item.IdCompany })"> <i class="fas fa-trash-alt"></i> Delete </a>
                            }
                            else
                            {
                                <a class="btn btn-block bg-gradient-success d-lg-inline active" data-toggle="modal" data-target="#modal" data-url="@Url.Action("Active", "Companies", new { id = item.IdCompany })"> <i class="fas fa-history"></i> Active </a>
                            }
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>





