@model IceCreamSystem.Models.Company

@{
    Layout = "~/Views/Shared/_ModalView.cshtml";
    ViewBag.Title = "Delete";
    ViewBag.Btn = "danger";
}


<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.NameCompany)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.NameCompany)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Status)
    </dt>

    @if (Model.Status != 0)
    {
        <dd class="badge badge-success">
            @Html.DisplayFor(model => model.Status)
        </dd>
    }
    else
    {
        <dd class="badge badge-danger">
            @Html.DisplayFor(model => model.Status)
        </dd>
    }

    <dt>
        @Html.DisplayNameFor(model => model.Created)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Created)
    </dd>
</dl>



