@model IceCreamSystem.Models.Phone

<div class="input-group">
    <div class="form-group col-md-4">
        @Html.LabelFor(model => model.TypePhone, "TypePhone", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                </div>
                @Html.DropDownList("TypePhone", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypePhone, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group col-md-3">
        @Html.LabelFor(model => model.DDD, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                </div>
                @Html.EditorFor(model => model.DDD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DDD, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group col-md-5">
        @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                </div>
                @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
