@model IceCreamSystem.Models.Employee
@{
    Layout = "~/Views/Shared/_LoginView.cshtml";
    ViewBag.Title = "Login";
}

<div>

    @using (Html.BeginForm("Login", "Employees", FormMethod.Post))
    {
        <div class="form-horizontal">

            @if (@ViewBag.error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.error
                </div>
            }

            <div class="input-group input-group-lg">
                <div class="form-group">
                    @Html.LabelFor(model => model.LoginUser, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.LoginUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LoginUser, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="input-group input-group-lg">
                <div class="form-group">
                    @Html.LabelFor(model => model.PasswordUser, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.PasswordUser, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Enter" class="btn btn-primary btn-lg btn-block" />
            </div>
        </div>
    }

</div>